{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Master",
            "type": "debugpy",
            "request": "launch",
            "program": "src/master.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {"PYTHONPYCACHEPREFIX":"${workspaceFolder}/__pycache__"}
        },
        {
            "name": "Python Debugger: Slave",
            "type": "debugpy",
            "request": "launch",
            "program": "src/slave.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {"PYTHONPYCACHEPREFIX":"${workspaceFolder}/__pycache__"},
            "args": ["--conf","slave","--port","9005","--cli","2456"]
        },
        {
            "name": "Simulator",
            "type": "debugpy",
            "request": "launch",
            "module": "gui",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {"PYTHONPYCACHEPREFIX":"${workspaceFolder}/__pycache__"},
            "args": ["--simulator"]
        },
        {
            "name": "Runtime over WiFi",
            "type": "debugpy",
            "request": "launch",
            "module": "gui",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {"PYTHONPYCACHEPREFIX":"${workspaceFolder}/__pycache__"},
            "args": ["--device","192.168.4.1"]
        },
        {
            "name": "Runtime over TCP",
            "type": "debugpy",
            "request": "launch",
            "module": "gui",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {"PYTHONPYCACHEPREFIX":"${workspaceFolder}/__pycache__"},
            "args": []
        }
    ]
}